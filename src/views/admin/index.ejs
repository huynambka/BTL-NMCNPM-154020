<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
        <title>Admin Panel</title>
        <style>
            body {
                font-family: Arial, sans-serif;
            }
            .sidebar {
                height: 100vh;
                width: 200px;
                position: fixed;
                top: 0;
                left: 0;
                background-color: #f8f9fa;
                padding-top: 20px;
            }
            .sidebar button {
                display: block;
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: none;
                background-color: #ffffff;
                border-radius: 5px;
                text-align: left;
                font-size: 16px;
            }
            .sidebar button:hover {
                background-color: #e2e6ea;
            }
            .main-content {
                margin-left: 220px;
                padding: 20px;
            }
        </style>
    </head>
    <body>
        <div class="sidebar">
            <button onclick="showContent('statistics')">statistics</button>
            <button onclick="showContent('registration')">registration</button>
            <button onclick="showContent('users')">users</button>
            <button onclick="showContent('companies')">companies</button>
            <button onclick="showContent('feedbacks')">feedbacks</button>
        </div>

        <div class="main-content" id="mainContent">
            <h2>Welcome to Admin Panel</h2>
            <p>Select an option from the sidebar to view details.</p>
        </div>

        <script>
            function showContent(content) {
                const mainContent = document.getElementById("mainContent");
                mainContent.innerHTML = `<h2>${content}</h2><p>Details for ${content} will be shown here.</p>`;
            }
        </script>
    </body>
</html>
