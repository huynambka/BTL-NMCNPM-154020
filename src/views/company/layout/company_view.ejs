<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= company.companyName %> - Company Profile</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <style>
            /* Styling for the Company Banner */
            .company-banner {
                background-color: #f10f0f;
                padding: 20px;
                border-radius: 8px;
                margin-bottom: 20px;
                display: flex;
                align-items: center;
            }
            .company-banner .logo-circle {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 50%;
                margin-right: 20px;
            }

            /* Styling for Company Info and Contact Info sections */
            .company-info,
            .contact-info {
                background-color: #e9ecef;
                border-radius: 8px;
                padding: 20px;
                margin-bottom: 20px;
            }

            /* Styling for Job Listings */
            .job-item {
                border: 1px solid #dee2e6;
                border-radius: 8px;
                padding: 15px;
                margin-bottom: 15px;
                display: flex;
                align-items: center;
            }
            .job-item img {
                width: 60px;
                height: 60px;
                object-fit: cover;
                border-radius: 10px; /* Rounded corners for job logos */
                margin-right: 15px;
            }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <!-- Company Banner -->
            <div class="company-banner">
                <img src="<%= company.logoPath %>" alt="Company Logo" class="logo-circle" />
                <div>
                    <h3 class="mb-1"><%= company.companyName %></h3>
                    <a href="<%= company.website %>" class="btn btn-primary" target="_blank">Visit Website</a>
                </div>
            </div>

            <div class="row">
                <!-- Company Information -->
                <div class="col-md-8">
                    <div class="company-info">
                        <h5>About Company</h5>
                        <p><%= company.description %></p>
                    </div>

                    <!-- Job Listings -->
                    <h5 class="mb-3">Job Openings</h5>
                    <div class="list-group">
                        <% company.jobs.forEach(function(job) { %>
                        <div class="job-item">
                            <img src="<%= company.logoPath %>" alt="Company Logo" />
                            <div>
                                <h6><%= job.title %></h6>
                                <p class="mb-1 text-muted"><strong>Salary:</strong> <%= job.salary %></p>
                                <p class="mb-1 text-muted"><strong>Location:</strong> <%= job.region %></p>
                                <p class="mb-1 text-muted"><strong>Last Date:</strong> <%= job.deadline %></p>
                                <a href="#" class="btn btn-outline-primary btn-sm mt-2">Apply Now</a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-md-4">
                    <div class="contact-info">
                        <h5>Contact Information</h5>
                        <p>
                            <strong>Address:</strong> <%= company.address.detail %>, <%= company.address.ward %>, <%=
                            company.address.district %>, <%= company.address.province %>
                        </p>
                        <p><strong>Phone:</strong> <%= company.phoneNumber %></p>
                        <p><strong>Email:</strong> <%= company.email %></p>
                    </div>

                    <!-- Map Placeholder -->
                    <div class="contact-info">
                        <h5>Location Map</h5>
                        <iframe
                            src="https://www.google.com/maps?q=<%= encodeURIComponent(company.address.detail + ', ' + company.address.district + ', ' + company.address.province) %>&output=embed"
                            width="100%"
                            height="250"
                            style="border: 0"
                            allowfullscreen=""
                            loading="lazy"
                        ></iframe>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
