<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Job Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
        <style>
            .job-card,
            .job-details,
            .company-card,
            .general-info {
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                padding: 20px;
                background-color: #fff;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                margin-top: 20px;
            }
            .job-title {
                font-size: 1.25rem;
                font-weight: bold;
                color: #333;
            }
            .job-info {
                display: flex;
                justify-content: space-around;
                margin-top: 15px;
                margin-bottom: 15px;
            }
            .job-info-item {
                text-align: center;
            }
            .job-info-item i {
                font-size: 1.5rem;
                color: #28a745;
            }
            .job-info-item span {
                display: block;
                font-weight: bold;
            }
            .job-deadline {
                color: #757575;
                font-size: 0.9rem;
            }
            .edit-btn,
            .apply-btn {
                background-color: #28a745;
                color: white;
                font-weight: bold;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                text-align: center;
                display: inline-block;
                margin-top: 20px;
                cursor: pointer;
                text-decoration: none;
            }
            .edit-btn:hover,
            .apply-btn:hover {
                background-color: #218838;
            }
            .section-title {
                font-weight: bold;
                color: #333;
                margin-top: 15px;
                font-size: 1.2rem;
                border-left: 4px solid #28a745;
                padding-left: 10px;
            }
            .company-logo {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                overflow: hidden;
                margin-bottom: 10px;
            }
            .company-logo img {
                width: 100%;
                height: auto;
            }
            .company-link {
                color: #28a745;
                font-weight: bold;
                text-decoration: none;
            }
            .company-link:hover {
                text-decoration: underline;
            }
            .general-info-item {
                display: flex;
                align-items: center;
                margin-bottom: 15px;
                color: #333;
            }
            .general-info-item i {
                font-size: 1.5rem;
                color: #28a745;
                margin-right: 10px;
            }
            .general-info-item span {
                font-weight: bold;
                display: block;
                color: #333;
            }
        </style>
    </head>

    <body>
        <div class="container mt-4">
            <div class="row">
                <!-- Job Summary and Details Section (6/10 width) -->
                <div class="col-md-6">
                    <div class="job-card p-4">
                        <!-- Job Title -->
                        <div class="job-title"><%= job.title %></div>

                        <!-- Job Information (Salary, Location, Experience) -->
                        <div class="job-info">
                            <div class="job-info-item">
                                <i class="bi bi-currency-dollar"></i>
                                <span>Mức lương</span>
                                <div><%= job.salary %></div>
                            </div>
                            <div class="job-info-item">
                                <i class="bi bi-geo-alt"></i>
                                <span>Địa điểm</span>
                                <div><%= job.region %></div>
                            </div>
                            <div class="job-info-item">
                                <i class="bi bi-hourglass-split"></i>
                                <span>Kinh nghiệm</span>
                                <div><%= job.job_experience %> năm</div>
                            </div>
                        </div>

                        <!-- Job Deadline -->
                        <div class="job-deadline">
                            <i class="bi bi-clock"></i> Hạn nộp hồ sơ: <%= job.last_date.toLocaleDateString('vi-VN') %>
                        </div>

                        <!-- Edit Button -->
                        <a href="/company/jobs/<%= job._id %>/edit" class="edit-btn"> Chỉnh sửa </a>

                        <!-- Apply Now Button -->
                        <form id="applyForm" action="/job/apply/<%= job._id %>" method="POST">
                            <button type="button" onclick="applyToJob('<%= job._id %')" class="apply-btn">Apply Now</button>
                        </form>
                        <div id="applyMessage" style="display: none; color: green; margin-top: 10px;">
                            Job application successful!
                        </div>
                    </div>

                    <!-- Job Details Section -->
                    <div class="job-details p-4">
                        <div class="section-title">Chi tiết tuyển dụng</div>
                        <div class="job-detail-section"><strong>Loại công việc:</strong> <%= job.type_of_work %></div>
                        <div class="section-title">Mô tả công việc</div>
                        <div class="job-detail-section">
                            <p><%= job.job_description %></p>
                        </div>
                        <div class="section-title">Yêu cầu ứng viên</div>
                        <div class="job-detail-section">
                            <p><%= job.job_requirement %></p>
                        </div>
                        <div class="section-title">Kỹ năng chuyên môn</div>
                        <div class="job-detail-section">
                            <p><%= job.skill.join(', ') %></p>
                        </div>
                        <div class="section-title">Quyền lợi</div>
                        <div class="job-detail-section">
                            <p><%= job.job_benefit %></p>
                        </div>
                        <div class="section-title">Địa điểm làm việc</div>
                        <div class="job-detail-section">
                            <p><%= job.location %></p>
                        </div>
                        <div class="section-title">Thời gian làm việc</div>
                        <div class="job-detail-section">
                            <p><%= job.job_time %></p>
                        </div>
                    </div>
                </div>

                <!-- Company Info Section (4/10 width) -->
                <div class="col-md-4">
                    <div class="company-card p-4 text-center">
                        <!-- Company Logo -->
                        <div class="company-logo">
                            <img src="<%= job.company_id.company_logo %>" alt="Company Logo" />
                        </div>
                        <!-- Company Name -->
                        <h5><%= job.company_id.company_name %></h5>

                        <!-- Company Details -->
                        <p><i class="bi bi-telephone-fill"></i> Số điện thoại: <%= job.company_id.company_phone %></p>
                        <p><i class="bi bi-envelope-fill"></i> Email: <%= job.company_id.company_email %></p>
                        <p><i class="bi bi-geo-alt-fill"></i> Địa chỉ: <%= job.company_id.location %></p>

                        <!-- Company Link -->
                        <a href="/company/<%= job.company_id._id %>/" class="company-link" target="_blank">
                            Xem trang công ty <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                    </div>

                    <!-- General Information Section -->
                    <div class="general-info p-4">
                        <h5 class="text-left">Thông tin chung</h5>
                        <div class="general-info-item">
                            <i class="bi bi-award-fill"></i>
                            <div>
                                <span>Cấp bậc:</span>
                                <div><%= job.level %></div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-hourglass-split"></i>
                            <div>
                                <span>Kinh nghiệm:</span>
                                <div><%= job.job_experience %> năm</div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-people-fill"></i>
                            <div>
                                <span>Số lượng tuyển:</span>
                                <div><%= job.number_of_recruitment %> người</div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-briefcase-fill"></i>
                            <div>
                                <span>Hình thức làm việc:</span>
                                <div><%= job.type_of_work %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <!-- JavaScript for Applying to Job -->
        <script>
            function applyToJob(jobId) {
                fetch(`/job/apply/${jobId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin' // Include cookies if needed for authentication
                })
                .then(response => response.json())
                .then(data => {
                    if (data.message === 'Job application successful') {
                        // Show the success message
                        const messageDiv = document.getElementById('applyMessage');
                        messageDiv.style.display = 'block';

                        // Hide the message after 3 seconds
                        setTimeout(() => {
                            messageDiv.style.display = 'none';
                        }, 3000);
                    } else {
                        alert('There was an error applying for the job. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again.');
                });
            }
        </script>
    </body>
</html>
