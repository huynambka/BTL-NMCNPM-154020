    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Tổng thể giao diện */
        body {
            background: linear-gradient(to right, #e3f2fd, #bbdefb);
            color: #212529;
        }

        /* Card Profile */
        .profile-card {
            background-color: #fff;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
            position: relative;
            text-align: center;
        }

        /* Header */
        .profile-header {
    text-align: center;
    background-color: #2196f3;
    color: white;
    padding: 20px;
    border-radius: 15px 15px 0 0;
    position: relative;
}
.profile-details {
    text-align: left; /* Căn lề trái */
    padding: 10px 20px; /* Tạo khoảng cách dễ nhìn */
    line-height: 1.6; /* Tăng khoảng cách giữa các dòng */
}

.profile-header img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin-bottom: 15px; /* Thêm khoảng cách giữa avatar và tên */
    border: 5px solid #fff;
}

.profile-header h2 {
    font-size: 1.8rem;
    font-weight: bold;
    margin-top: 10px; /* Đảm bảo khoảng cách hợp lý với avatar */
}


        /* Button */
        .btn-update {
            background-color: #28a745;
            color: white;
        }

        .btn-update:hover {
            background-color: #218838;
        }

        .btn-back {
            margin: 20px auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Footer */
        footer {
            background-color: #f1f1f1;
            text-align: center;
            padding: 15px;
            margin-top: 30px;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header class="py-3 bg-light shadow-sm">
