<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cài đặt thông tin cá nhân</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    .container {
      max-width: 1200px;
    }
    .card {
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      margin-bottom: 16px;
    }
    .profile-pic {
      border-radius: 50%;
      width: 120px;
      height: 120px;
      object-fit: cover;
      
    }
    .card.text-center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center; /* Căn giữa theo chiều ngang */
        height: 100%; /* Đảm bảo card chiếm đủ chiều cao */
      }
    .profile-pic {
        margin: 0 auto; /* Đảm bảo ảnh nằm giữa theo chiều ngang */
      }
    .job-card:hover {
      transform: translateY(-5px);
      box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
      transition: 0.3s ease-in-out;
    }
    .btn-outline-danger {
      transition: 0.3s;
    }
    .btn-outline-danger:hover {
      background-color: #ff6b6b;
      color: #fff;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <div class="row d-flex" style="margin-top: 16px;">
      <!-- Thông tin cá nhân -->
      <div class="col-md-9">    
        <div class="card p-4" >
          <h3 class="card-title">Các công việc đang ứng tuyển</h3>

          <% if (jobs.length > 0) { %>
            <% jobs.forEach(job => { %>
              <a href="#" class="text-decoration-none">
                <div class="card job-card mb-3 p-3">
                  <div class="d-flex align-items-center justify-content-between">
                    <!-- Logo công ty -->
                    <div class="d-flex align-items-center">
                      <img src="<%= job.company_logo %>" alt="Company Logo" class="rounded-circle" 
                           style="width: 60px; height: 60px; object-fit: cover;">
                      <div class="ms-3">
                        <!-- Thông tin công việc -->
                        <h5 class="mb-1 text-primary"><%= job.title %></h5>
                        <p class="mb-1 text-muted"><i class="fa fa-building"></i> <%= job.company_name %></p>
                        <p class="mb-0 text-success"><i class="fa fa-money-bill-wave"></i> Lương: <%= job.salary %></p>
                      </div>
                    </div>
                    <!-- Nút chức năng -->
                    <div class="d-flex align-items-center">
                      <span class="badge bg-secondary me-2"><i class="fa fa-map-marker-alt"></i> <%= job.location %></span>
                    </div>
                  </div>
                </div>
              </a>
            <% }); %>
          <% } else { %>
            <p class="text-center text-muted">Hiện tại không có công việc nào được ứng tuyển.</p>
          <% } %>
        </div>
      </div>

      <!-- Tùy chọn trạng thái -->
      <div class="col-md-3" style="margin-bottom: 16px;">
        <div class="card p-4 text-center">
          <img src="https://inkythuatso.com/uploads/thumbnails/800/2023/03/9-anh-dai-dien-trang-inkythuatso-03-15-27-03.jpg" 
                alt="User Avatar" class="profile-pic">
          <h5 class="mt-3">Chào bạn,</h5>
          <h6 class="text-muted"><%= user.fullname %></h6>
          <a href= "/user/information" class="btn btn-primary mt-3">Cập nhật thông tin</a>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
</body>
</html>
